	filenamecat.c, findprog.c, fnmatch.c, fopen-safer.c, free.c,
	fsusage.c, ftruncate.c, full-write.c, fwriteerror.c,
	getaddrinfo.c, getcwd.c, getdelim.c, getline.c, getlogin_r.c,
