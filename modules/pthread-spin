configure.ac:
gl_PTHREAD_SPIN
if test $HAVE_PTHREAD_SPIN_INIT = 0 || test $REPLACE_PTHREAD_SPIN_INIT = 1; then
  AC_LIBOBJ([pthread-spin])
fi
gl_PTHREAD_MODULE_INDICATOR([pthread-spin])

