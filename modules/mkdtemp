Description:
mkdtemp() function: create a private temporary directory.

Files:
lib/mkdtemp.c
m4/mkdtemp.m4

Depends-on:
stdlib
stdint          [test $HAVE_MKDTEMP = 0]
tempname        [test $HAVE_MKDTEMP = 0]

configure.ac:
gl_FUNC_MKDTEMP
gl_CONDITIONAL([GL_COND_OBJ_MKDTEMP], [test $HAVE_MKDTEMP = 0])
AM_COND_IF([GL_COND_OBJ_MKDTEMP], [
  gl_PREREQ_MKDTEMP
])
gl_STDLIB_MODULE_INDICATOR([mkdtemp])

Makefile.am:
if GL_COND_OBJ_MKDTEMP
lib_SOURCES += mkdtemp.c
endif

Include:
<stdlib.h>

Link:
$(LIB_GETRANDOM)
$(LIB_CLOCK_GETTIME)

License:
LGPLv2+

Maintainer:
all
