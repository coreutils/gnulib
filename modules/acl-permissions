Description:
Access control lists of files.  (Unportable.)

Files:
lib/acl.h
lib/acl-internal.h
lib/acl-errno-valid.c
lib/acl_entries.c
lib/acl-internal.c
lib/get-permissions.c
lib/set-permissions.c
m4/acl.m4

Depends-on:
extern-inline
fstat
minmax
stat
stringeq
bool
sys_stat-h
stdint-h

configure.ac:
gl_FUNC_ACL
gl_CONDITIONAL([GL_COND_OBJ_ACL_ENTRIES], [test $NEED_ACL_ENTRIES = 1])

Makefile.am:
lib_SOURCES += acl-errno-valid.c acl-internal.c \
  get-permissions.c set-permissions.c
if GL_COND_OBJ_ACL_ENTRIES
lib_SOURCES += acl_entries.c
endif

Include:
"acl.h"

Link:
$(LIB_ACL)

