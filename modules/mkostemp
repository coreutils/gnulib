Description:
mkostemp() function: create a private temporary file, with specific opening
flags.

Files:
lib/mkostemp.c
m4/mkostemp.m4

Depends-on:
stdlib
extensions
largefile
tempname        [test $HAVE_MKOSTEMP = 0]

configure.ac:
gl_FUNC_MKOSTEMP
gl_CONDITIONAL([GL_COND_OBJ_MKOSTEMP], [test $HAVE_MKOSTEMP = 0])
AM_COND_IF([GL_COND_OBJ_MKOSTEMP], [
  gl_PREREQ_MKOSTEMP
])
gl_MODULE_INDICATOR([mkostemp])
gl_STDLIB_MODULE_INDICATOR([mkostemp])

Makefile.am:
if GL_COND_OBJ_MKOSTEMP
lib_SOURCES += mkostemp.c
endif

Include:
<stdlib.h>

Link:
$(LIB_GETRANDOM)
$(LIB_CLOCK_GETTIME)

License:
LGPLv2+

Maintainer:
Jim Meyering
